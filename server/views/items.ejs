<%- include('partials/_header') %>

<div class="container my-5">
  <h1 class="text-center mb-4">Dota 2 Items</h1>
  
  <div class="text-end mb-3">
    <a href="/items/add" class="btn btn-success">
      <i class="fas fa-plus-circle"></i> Add New Item
    </a>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% items.sort((a, b) => a.name.localeCompare(b.name)).forEach(item => { %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><strong>Type:</strong> <%= item.type %></p>
            <p class="card-text"><strong>Cost:</strong> <%= item.cost %></p>
            <p class="card-text"><%= item.description %></p>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <a href="/items/edit/<%= item._id %>" class="btn btn-warning btn-sm">
              <i class="fas fa-edit"></i> Edit
            </a>
            <a href="/items/delete/<%= item._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">
              <i class="fas fa-trash-alt"></i> Delete
            </a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('partials/_footer') %>