<%- include('./partials/_header') %>
<div class="container">
  <div class="row">
      <div class="offset-md-3 col-md-6">
          <h1><%= title %></h1>
          <form class="form" method="POST">
              <div class="form-group">
                  <label for="usernameField">Username</label>
                  <input type="text" class="form-control" id="usernameField" placeholder="Enter the player's username" name="username" required>
              </div>
              <div class="form-group">
                  <label for="rankField">Rank</label>
                  <input type="text" class="form-control" id="rankField" placeholder="Enter the desired rank" name="rank" required>
              </div>
              <div class="form-group">
                  <label for="serviceTypeField">Service Type</label>
                  <input type="text" class="form-control" id="serviceTypeField" placeholder="Enter the service type (e.g., MMR Boost)" name="serviceType" required>
              </div>
              <div class="form-group">
                  <label for="statusField">Status</label>
                  <input type="text" class="form-control" id="statusField" placeholder="Enter the status (e.g., pending)" name="status" value="pending" required>
              </div>
              <div class="form-group">
                  <label for="priceField">Price</label>
                  <input type="text" class="form-control" id="priceField" placeholder="Enter the service price" name="price" required>
              </div>
              <button class="btn btn-primary" type="submit">Submit
                  <i class="fas fa-edit"></i>
              </button>  
              <a class="btn btn-warning" href="/boosts">Cancel
                  <i class="fas fa-undo"></i>
              </a>    
          </form>
      </div>
  </div>
</div>

<%- include('./partials/_footer') %>