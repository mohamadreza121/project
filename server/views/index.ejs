<%- include('partials/_header') %>

<div class="container my-5">
  <h1 class="text-center mb-4">Dota 2 Wiki</h1>
  
  <!-- Search Section -->
  <div class="row mb-4">
    <div class="col-md-6 offset-md-3">
      <form action="/search" method="GET" class="input-group">
        <input type="text" class="form-control" name="query" placeholder="Search for heroes or items..." aria-label="Search" required>
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-search"></i> Search
        </button>
      </form>
    </div>
  </div>
  
  <!-- Add Heroes and Items Section -->
  <div class="text-center mb-4">
    <a href="/heroes/add" class="btn btn-success me-2">
      <i class="fas fa-user-plus"></i> Add New Hero
    </a>
    <a href="/items/add" class="btn btn-success">
      <i class="fas fa-box-open"></i> Add New Item
    </a>
  </div>

  <!-- Heroes and Items Quick Access -->
  <div class="row">
    <!-- Heroes Section -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h3><i class="fas fa-users"></i> Heroes</h3>
        </div>
        <div class="card-body text-center">
          <p>Explore all Dota 2 heroes and learn about their abilities, roles, and lore.</p>
          <a href="/heroes" class="btn btn-primary">
            <i class="fas fa-book-open"></i> View All Heroes
          </a>
        </div>
      </div>
    </div>

    <!-- Items Section -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h3><i class="fas fa-scroll"></i> Items</h3>
        </div>
        <div class="card-body text-center">
          <p>Browse through the list of items to understand their types, costs, and effects.</p>
          <a href="/items" class="btn btn-primary">
            <i class="fas fa-book-open"></i> View All Items
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/_footer') %>
