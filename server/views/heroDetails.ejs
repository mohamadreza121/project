<%- include('partials/_header') %>

<div class="container my-5">
  <h1 class="text-center mb-4"><%= hero.name %></h1>
  
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><i class="fas fa-shield-alt"></i> Role</h5>
      <p class="card-text"><%= hero.role %></p>
      
      <h5 class="card-title mt-4"><i class="fas fa-bolt"></i> Abilities</h5>
      <p class="card-text">
        <% if (hero.abilities && hero.abilities.length > 0) { %>
          <%= hero.abilities.join(', ') %>
        <% } else { %>
          No abilities available.
        <% } %>
      </p>
      
      <h5 class="card-title mt-4"><i class="fas fa-book"></i> Description</h5>
      <p class="card-text"><%= hero.description %></p>
    </div>
  </div>
</div>

<%- include('partials/_footer') %>
